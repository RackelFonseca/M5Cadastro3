<h1 class="text-center my-3">Atualizar Tarefa: {{tarefas.titulo}}</h1> 
<form action="/usuarios/Update" method="post""> 
<input type="hidden" name="id_usuario" value="{{tarefas.id_usuario}}" /> 
<div class="row w-50 d-block m-auto g-3"> 
    <div class="col-12"> 
      <label class="form-label" for="nome">Nome:</label> 
      <input 
        class="form-control" 
        type="nome" 
        name="nome" 
        id="nome" 
        placeholder="Digite o nome do Usuário" 
      /> 
      </div> 
      <div class="col-12"> 
        <label class="form-label" for="email">Email:</label> 
        <input 
          class="form-control" 
          type="email" 
          name="email" 
          id="email" 
          placeholder="Digite o email do Usuário." 
        /> 
      </div> 
     <div class="col-12"> 
        <label class="form-label" for="senha">Email:</label> 
        <input 
          class="form-control" 
          type="senha" 
          name="senha" 
          id="senha" 
          placeholder="Digite a senha do Usuário." 
        /> 
      </div>
<input class="btn btn-primary my-3" type="submit" value="Atualizar Usuario" /> 
</div> 
</div> 
</form> 